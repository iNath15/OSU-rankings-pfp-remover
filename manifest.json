{
  "manifest_version": 2,
  "name": "No OSU Profile Picture",
  "version": "2.0",
  "description": "Removes profile pictures from the Rankings and more.",
  "permissions": [
    "storage",
    "activeTab",
    "*://osu.ppy.sh/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://osu.ppy.sh/*"],
      "js": ["remove.js"]
    }
  ],
  "browser_action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
